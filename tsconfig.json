{
    "compilerOptions": {
        "target": "es2018",
        "lib": ["esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        // "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "build",
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "sourceMap": true,
        "rootDir": "src",
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src"],
    "exclude": ["src/porting.ts"]
}
